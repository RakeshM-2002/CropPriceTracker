<div class="container mt-5">
    <h4>⏰ Add Price Alert</h4>

    <select id="cropName" class="form-control mb-2">
        <option value="">-- Select Crop --</option>
    </select>

    <select id="marketName" class="form-control mb-2">
        <option value="">-- Select Market --</option>
    </select>

    <input id="targetPrice" type="number" class="form-control mb-2" placeholder="Target Price">

    <select id="aboveBelow" class="form-control mb-2">
        <option value="">-- Alert Type --</option>
        <option value="ABOVE">ABOVE</option>
        <option value="BELOW">BELOW</option>
     </select>

    <button class="btn btn-warning" onclick="addAlert()">Add Alert</button>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            loadCropsNames();
            loadMarketNames();
        });
    </script>
}
