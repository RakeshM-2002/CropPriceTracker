@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow p-4 login-card">
            <h4 class="text-center mb-3">🌾 Crop Price Tracker</h4>

            <div class="mb-3">
                <label class="form-label">Mobile Number</label>
                <input type="text" id="mobile" class="form-control" placeholder="Enter mobile number">
            </div>

            <button class="btn btn-primary w-100" onclick="generateOtp()">Generate OTP</button>

            <div class="mt-3">
                <label class="form-label">OTP</label>
                <input type="text" id="otp" class="form-control" placeholder="Enter OTP">
            </div>

            <button class="btn btn-success w-100 mt-3" onclick="verifyOtp()">Verify OTP</button>

            <p id="message" class="text-center mt-3 text-danger"></p>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>
